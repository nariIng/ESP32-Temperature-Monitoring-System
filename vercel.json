{
  "version": 2,
  "builds": [
    { "src": "server/server.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/server.js" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
  "env": {
    "MONGO_URI": "@MONGO_URI" // Ceci fait référence à la variable d'environnement MONGO_URI
  }
}
